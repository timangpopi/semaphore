# Push kernel to channel
function push() {
        cd anykernel3
	ZIP=$(echo Steel*.zip)
	curl -F document=@$ZIP "https://api.telegram.org/bot961309167:AAHAtYQIDZgCpL8V_Pn5LYyozC5V0KJy3SE/sendDocument" \
